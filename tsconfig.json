{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es6", "dom", "es7"
    ],
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "suppressImplicitAnyIndexErrors": true,
    "downlevelIteration": true,
    "paths": {
      "@tbmini/*": ["packages/*/src"]
    },
    "baseUrl": "./packages",
  },
  "exclude": [
    "node_modules",
    "dist",
  ],
  "include": [ "packages/*/src" ]
}